<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.chanpin.mapper.ChanpinMapper">
    
    <resultMap type="Chanpin" id="ChanpinResult">
        <result property="id"    column="id"    />
        <result property="code"    column="code"    />
        <result property="pinlei"    column="pinlei"    />
        <result property="chexing"    column="chexing"    />
        <result property="zhuangyun"    column="zhuangyun"    />
        <result property="batteryType"    column="battery_type"    />
    </resultMap>

    <sql id="selectChanpinVo">
        select id, code, pinlei, chexing, zhuangyun, battery_type from tb_chanpin
    </sql>

    <select id="selectChanpinList" parameterType="Chanpin" resultMap="ChanpinResult">
        <include refid="selectChanpinVo"/>
        <where>  
            <if test="code != null  and code != ''"> and code = #{code}</if>
            <if test="pinlei != null  and pinlei != ''"> and pinlei = #{pinlei}</if>
            <if test="chexing != null  and chexing != ''"> and chexing = #{chexing}</if>
            <if test="zhuangyun != null  and zhuangyun != ''"> and zhuangyun = #{zhuangyun}</if>
            <if test="batteryType != null  and batteryType != ''"> and battery_type = #{batteryType}</if>
        </where>
    </select>
    
    <select id="selectChanpinById" parameterType="Long" resultMap="ChanpinResult">
        <include refid="selectChanpinVo"/>
        where id = #{id}
    </select>

    <insert id="insertChanpin" parameterType="Chanpin" useGeneratedKeys="true" keyProperty="id">
        insert into tb_chanpin
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="code != null">code,</if>
            <if test="pinlei != null">pinlei,</if>
            <if test="chexing != null">chexing,</if>
            <if test="zhuangyun != null">zhuangyun,</if>
            <if test="batteryType != null">battery_type,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="code != null">#{code},</if>
            <if test="pinlei != null">#{pinlei},</if>
            <if test="chexing != null">#{chexing},</if>
            <if test="zhuangyun != null">#{zhuangyun},</if>
            <if test="batteryType != null">#{batteryType},</if>
         </trim>
    </insert>

    <update id="updateChanpin" parameterType="Chanpin">
        update tb_chanpin
        <trim prefix="SET" suffixOverrides=",">
            <if test="code != null">code = #{code},</if>
            <if test="pinlei != null">pinlei = #{pinlei},</if>
            <if test="chexing != null">chexing = #{chexing},</if>
            <if test="zhuangyun != null">zhuangyun = #{zhuangyun},</if>
            <if test="batteryType != null">battery_type = #{batteryType},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteChanpinById" parameterType="Long">
        delete from tb_chanpin where id = #{id}
    </delete>

    <delete id="deleteChanpinByIds" parameterType="String">
        delete from tb_chanpin where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>